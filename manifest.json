{
    "name": "Translateral",
    "version": "0.1",
    "description": "Actually learn your language!",
    "permissions": ["storage"],
    "background": {
        "scripts": [
            "dictionary.js",
            "background.js"
        ],
        "persistent": false
    },
    "manifest_version": 2,
    "chrome_url_overrides" : {
        "newtab": "newtab.html"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "css": [
                "styles.css"          
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}